{% block content %}

    <div class="body_page_off"
       <div class="body_reflexe">
		<div class="div_titre">
			<h1 id="reflexe_titre"> Jeu de Reflexe </h1>
		</div>
		<div class="div_jeu_reflexe">

			<div class="div_regles">
				<h2 >Règles du jeu</h2>
