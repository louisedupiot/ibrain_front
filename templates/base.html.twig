<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<link href="/assets/css/home.css" rel="stylesheet">
		<link href="/assets/css/demineur.css" rel="stylesheet">
		<link href="/assets/css/Product.css" rel="stylesheet">
		<link href="/assets/css/search-bar.css" rel="stylesheet">
		<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
		<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.1.3/dist/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
		<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/js/bootstrap.bundle.min.js" integrity="sha384-pprn3073KE6tl6bjs2QrFaJGz5/SUsLqktiwsUTF55Jfv3qYSDhgCecCxMW52nD2" crossorigin="anonymous"></script>
		<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.5/dist/umd/popper.min.js"></script>
		{% block javascript %}
		{% endblock %}

	</head>
	<body>
		<div id="div-header">
			<nav class="navbar navbar-expand-lg " style="background-color: #272727;">
				<a class="navbar-brand" href="/"><img src="../assets/images/ibrain_logo_blanc.png" width="170" height="85"/></a>
				<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>

				<div class="collapse navbar-collapse" id="navbarSupportedContent">
					<ul class="navbar-nav mr-auto">
						<li class="nav-item mx-2">
							<a class="nav-link" href="/">
								Accueil
								<span class="sr-only">(current)</span>
							</a>
						</li>
						<li class="nav-item mx-2">
							<a class="nav-link" href="/jeux">
								Tous les jeux
							</a>
						</li>
						<li class="nav-item mx-2">
							<a class="nav-link" href="/Boutique">
								Boutique
							</a>
						</li>
						<li class="nav-item mx-2">
							<form class="form-inline my-2 my-lg-0 ">
								<div class="search-bar">
									<input type="text" placeholder="Rechercher..." id="myInput" onkeyup="filterFunction()">

									<div id="myDropdown" class="dropdown-content">
										<a href="/memory_game">Memory</a>
										<a href="/calcul_game">Calcul</a>
										<a href="/demineur_game">Demineur</a>
										<a href="/reflexe_game">Réflexe</a>
									</div>
								</div>
								<script src="{{ asset('/assets/js/search-bar.js') }}"></script>

							</form>
						</li>
					</ul>

					<script src="{{ asset('/assets/js/search-bar.js') }}"></script>
					<ul class="navbar-nav mr-5">
						{% if is_granted('ROLE_ADMIN') %}
							<li class="nav-item mx-2">
								<a class="nav-link" href="/admin">
									Admin
									<img src='../assets/images/toolbox.png' width='30px' height='30px'>
								</a>
							</li>
						{% else %}
							<li class="nav-item mx-2">
								<a class="nav-link"  id ="cmt" href="/compte">
									Mon compte
									<img src='../assets/images/user.png' width='30px' height='30px'>
								</a>
							</li>
						{% endif %}
						{% if app.user %}
						
							<li class="nav-item mx-2">
								<a class="nav-link" href="/logout">
									Déconnexion
								</a>
							</li>
						{% else %}
							<li class="nav-item mx-2">
								<a class="nav-link" href="/connexion">
									Connexion
								</a>
							</li>
							<li id="li-inscription" class="nav-item mx-2">
								<a class="nav-link" href="/register">
									Inscription
								</a>
							</li>
						{% endif %}
					</ul>
				</div>
			</div>
		</nav>
		{% block content %}{% endblock %}
		<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
		<script src="{{ asset('assets/js/bootstrap.bundle.js')}}"></script>
	</body>
</html></body></html></body></html>
