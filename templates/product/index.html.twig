{% include 'base.html.twig' %}

<title>
	{% block title %}Produits
	{% endblock %}
</title>

<link href="/assets/css/all-products.css" rel="stylesheet">
{% block body %}


	<h1 class="grand-titre">Notre boutique</h1>

	<div class="div-filtre">
		<h3>Filtrer</h3>
		{{form(form)}}
		</div>
		<h3>Nos produits</h3>
		<div class="div-produits">

			{% for product in products %}
				<div class="col-md-4">
					<div class="bloc-produit">
						<a href="{{path("product" , {'slug' : product.slug }) }}">
							<img class="produits" src="/uploads/{{ product.illustration }}" alt="{{ product.name }}" height="200px" width="200px"></a>
						<h5>{{ product.name }}</h5>
						<hr>
						<span class="product-subtitle">{{ product.subtitle }}</span>
						<span class="product-price">{{ (product.prix / 100)| number_format(2, ',', '.') }}
							â‚¬</span>
					</div>
				</div>
			{% endfor %}
		</div>
	{% endblock %}
